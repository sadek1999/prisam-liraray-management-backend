generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Prisma schema file

model Book {
  id              String         @id @default(uuid())
  title           String
  genre           String
  publishedYear   Int
  totalCopies     Int
  availableCopies Int
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  BorrowRecord    BorrowRecord[]

  @@map("books")
}

model Member {
  id             String   @id @default(uuid())
  name           String
  email          String   @unique
  phone          String
  membershipData DateTime

  BorrowRecord BorrowRecord[]

  @@map("members")
}

model BorrowRecord {
  id         String   @id @default(uuid())
  borrowDate DateTime
  returnData DateTime
  bookId     String
  memberId   String
  book       Book     @relation(fields: [bookId], references: [id])
  member     Member   @relation(fields: [memberId], references: [id])

  @@map("borrowRecords")
}
